<div class="panel panel-default">
  <form class="form-horizontal">
    <div class="panel-body">
      <div class="form-group">
        <label for="data_inicial" class="col-sm-2 control-label">Data inicial</label>
        <div class="col-sm-4">
          <input type="text" class="form-control date-br datepicker" id="data_inicial" placeholder="Data inicial">
        </div>
      </div>

      <div class="form-group">
        <label for="data_final" class="col-sm-2 control-label">Data final</label>
        <div class="col-sm-4">
          <input type="text" class="form-control date-br datepicker" id="data_final" placeholder="Data Final">
        </div>
      </div>

      <div class="form-group">
        <label for="localidade" class="col-sm-2 control-label">Localidade</label>
        <div class="col-sm-4">
          <input type="text" name="localidade" id="localidade" placeholder="Localidade" class="form-control" value="<%= @filtro.localidade %>" />
          <input type="hidden" name="query[localidade_id]" id="localidade_id" value="<%= @filtro.localidade_id %>" />
        </div>
      </div>

      <div class="form-group">
        <label for="setor_comercial" class="col-sm-2 control-label">Setor Comercial</label>
        <div class="col-sm-4">
          <input type="text" name="setor_comercial" id="setor_comercial" placeholder="Setor Comercial" class="form-control" value="<%= @filtro.setor_comercial %>" disabled="true" />
          <input type="hidden" name="query[setor_comercial_id]" id="setor_comercial_id" value="<%= @filtro.setor_comercial_id %>" />
        </div>
      </div>

      <div class="form-group">
        <label for="rota" class="col-sm-2 control-label">Rota</label>
        <div class="col-sm-1">
          <div class="ui-widget">
            <select id="rota_id" name="query[quadra][rota_id]" class="form-control" data-rota-selecionada="<%= @filtro.rota_id %>" disabled=true>
              <option></option>
            </select>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label  class="col-sm-2 control-label"></label>
        <div class="col-sm-4">
          <a href="" id="mostrar-pesquisa-avancada">pesquisa avançada</a>
        </div>
      </div>

      <div id="pesquisa-avancada" class="hide">
        <div class="form-group">
          <label for="quadra" class="col-sm-2 control-label">Quadra</label>
          <div class="col-sm-2">
            <select id="quadra_id" name="query[qdra_id]" class="form-control" data-quadra-selecionada="<%= @filtro.quadra_id %>" disabled=true>
              <option></option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label for="lote" class="col-sm-2 control-label">Lote</label>
          <div class="col-sm-2">
            <input type="text" name="query[numero_lote]" id="numero_lote" placeholder="Lote" class="form-control" value="<%= @filtro.numero_lote %>" />
          </div>
        </div>

        <div class="form-group">
          <label for="sublote" class="col-sm-2 control-label">Sublote</label>
          <div class="col-sm-2">
            <input type="text" name="query[numero_sublote]" id="numero_sublote" placeholder="Sublote" class="form-control" value="<%= @filtro.numero_sublote %>" />
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <input type="hidden" name="usuario_id" id="usuario_id" value="<%= @usuario_logado.id %>">
      <%= link_to "Gerar arquivo", "", data: { "loading-text": "Processando..." }, id: "btn-gerar-arquivo-hidrometro", class: "btn btn-info" %>

      <%= link_to "Limpar formulário", new_hidrometro_instalacao_historico_path, class: "limpar-form" %>
    </div>
  </form>
</div>