<div class="page-header">
  <%= build_breadcrumb [
    { title: "Arquivo de Retorno", active: true }
  ] %>

  <h1>Arquivo de Retorno</h1>
</div>

<div class="alert-arquivo"></div>

<div class="panel panel-default">
  <div class="panel-heading">Filtro</div>
  <div class="panel-body">
    <form class="form-inline">
      <div class="form-group">
        <label class="sr-only" for="lista-empresas">Empresas</label>
        <select class="form-control" id="lista-empresas">
          <option value="">Selecione uma empresa</option>
          <% @empresas.each do |empresa| %>
            <option value="<%= empresa.id %>"><%= empresa.nome %></option>
          <% end -%>
        </select>
      </div>
      <div class="form-group">
        <label class="sr-only" for="exampleInputPassword3">Data inicial</label>
        <input type="text" class="form-control date-br datepicker" id="data-inicial" placeholder="Data inicial">
      </div>
      <div class="form-group">
        <label class="sr-only" for="exampleInputPassword3">Data final</label>
        <input type="text" class="form-control date-br datepicker" id="data-final" placeholder="Data final">
      </div>
    </form>
  </div>
</div>

<div class="container-fluid container-arquivo">

  <div class="row" style="padding-bottom: 20px">
    <input type="hidden" name="usuario_id" id="usuario-id" value="<%= @usuario_logado.id %>">

    <%= link_to "Gerar arquivo", "", data: { "loading-text": "Processando..." }, id: "btn-gerar-arquivo", class: "btn btn-info" %>
  </div>
</div>

<div class="page-header">
  <h1>Hist√≥rico</h1>
</div>

<div class="panel panel-show">
  <%= render 'shared/list_historico', historico: @historico, url_arquivo: "/arquivo_recadastramento.csv?nome_arquivo="%>
</div>