<div class="signin-main">
  <div class="container signin-form signin-container">
    <fieldset>
      <div class="container-login">
        <%= image_tag "logomarca.png", alt: "Cosanpa", align: "center", height: 60 %>
        <h1><font color="#fff">GSAN</font></h1>
        <div class="inner-wrapper">
          <form class="form-horizontal">

            <label for="inputEmail" class="sr-only">nome</label>
            <input type="email" id="inputEmail" class="form-control input-lg" placeholder="nome" required autofocus>

            <label for="inputPassword" class="sr-only">senha</label>
            <input type="password" id="inputPassword" class="form-control input-lg" placeholder="senha" required>

            <button class="btn btn-primary btn-lg col-md-12" type="submit">Entrar</button>
          </form>

          <%= link_to "Esqueci minha senha", "" %>
        </div>
      </div>
    </fieldset>
  </div>
</div>