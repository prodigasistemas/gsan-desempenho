<div class="page-header">
  <div class="actions pull-right">

    <ul class="top-nav">
      <li class="dropdown">
        <div class="dropdown-toggle dropdown-action btn" id="dropdownMenu1" data-toggle="dropdown">
          Ações
          <span class="caret"></span>
        </div>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <li>
            <%= link_to send(edit_path, *models) do %>
              <i class="fa fa-pencil-square-o"></i> Editar
            <% end %>
          </li>
          <li>
            <%= link_to "", data: { toggle: "modal", target:"#alert-modal-#{models.last.id}" } do %>
              <i class="fa fa-close"></i> Remover
            <% end -%>
          </li>
        </ul>
      </li>
    </ul>

  </div>
  <% if name.blank? %>
    <h1><%= t("activerecord.models.#{models.last.class.to_s.underscore}") %> <%= truncate(models.last.name, length: 70) if models.last.has_attribute?(:name) %></h1>
  <% else %>
    <h1><%= name %></h1>
  <% end %>
</div>

<%= content_for :modal do %>
  <div id="alert-modal-<%= models.last.id %>" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Aviso</h4>
        </div>
        <div class="modal-body">
          <p>Deseja remover <%= models.last.class.attribute_method?(:name)? models.last.name : models.last.class.to_s.underscore %> ?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
          <%= link_to send(destroy_path, models.last.id), "data-method": "delete", class: "btn btn-danger" do %>
             Confirmar
          <% end -%>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% end %>