<div class="page-header">

  <%= build_breadcrumb [
    { title: "Recadastramento", link: recadastramentos_path },
    { title: "#{@atualizacao_cadastral.try(:id)}", active: true }
  ] %>

</div>

<div class="panel panel-show">
  <div class="panel-heading">Dados do Imóvel</div>

  <form class="form-inline">
    <div class="form-group">
      <%= label_tag "Matrícula:" %>
      <%= @imovel.try(:id) %>
    </div>
    <div class="form-group">
      <%= label_tag "Localidade:" %>
      <%= @imovel.try(:localidade).try(:nome) %>
    </div>
    <div class="form-group">
      <%= label_tag "Setor Comercial:" %>
      <%= @imovel.try(:setor_comercial).try(:nome) %>
    </div>
    <div class="form-group">
      <%= label_tag "Quadra:" %>
      <%= @imovel.try(:quadra).try(:numero_quadra) %>
    </div>
  </form>

  <form class="form-inline">
    <div class="form-group">
      <%= label_tag "Situação Ligação da Água:" %>
      <%= @imovel.try(:situacao_agua) %>
    </div>
    <div class="form-group">
      <%= label_tag "Situação Ligação do Esgoto:" %>
      <%= @imovel.try(:situacao_esgoto) %>
    </div>
    <div class="form-group">
      <%= label_tag "Quantidade de Economias:" %>
      <%= @imovel.try(:economias) %>
    </div>
  </form>

  <div class="pull-right">
    <a class="btn btn-success" role="button" href="#">Pré-Aprovar</a>
    <a class="btn btn-primary" role="button" href="#">Fiscalizar</a>
  </div>

  <br>
  <br>
  <%= smart_listing_render :campos %>
</div>
