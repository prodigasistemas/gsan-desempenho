<table class="table table-hover table-striped" style="table-layout: fixed; width: 100%">
  <thead>
    <tr>
      <th>Tabela</th>
      <th>Campo</th>
      <th>Anterior</th>
      <th>Transmitido</th>
      <th>Revisado</th>
      <th>Campos da revis√£o</th>
    </tr>
  </thead>
  <tbody>
    <% smart_listing.collection.each do |coluna| %>
      <tr>
        <td><%= coluna.tabela %></td>
        <td><%= coluna.campo %></td>
        <td><%= coluna.valor_anterior %></td>
        <td><%= coluna.valor_atual %></td>
        <td id="td_<%= coluna.id %>" style="word-wrap: break-word"><%= coluna.try(:valor_revisado) %></td>
        <td>
          <label>
            <input type="checkbox" id="<%= coluna.id %>" name="colunas_checkbox">
          </label>
        </td>
      </tr>
    <% end %>
    <% if smart_listing.empty? %>
      <tr><th colspan="4"><center>Nenhum registro encontrado</center></th></tr>
    <% end %>
  </tbody>
</table>
<input type="hidden" id="colunas_revisao" value="">
<%= smart_listing.paginate %>
