<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Número</th>
      <th>Vigência Inicial</th>
      <th>Vigência Final</th>
    </tr>
  </thead>
  <tbody>
    <% smart_listing.collection.each do |contrato| %>
      <tr class="item-list" data-item-id="<%= contrato.id %>" data-show-item="contrato_medicoes">
        <td><%= contrato.empresa.try(:nome) %></td>
        <td><%= contrato.numero %></td>
        <td><%= contrato.vigencia_inicial %></td>
        <td><%= contrato.vigencia_final %></td>
      </tr>
    <% end %>
    <% if smart_listing.empty? %>
      <tr><th><center>Nenhum registro encontrado</center></th></tr>
    <% end %>
  </tbody>
</table>
<%= smart_listing.paginate %>