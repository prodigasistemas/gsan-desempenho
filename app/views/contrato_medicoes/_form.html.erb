<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Formulário de Contrato</h3>
  </div>

  <%= gsan_form_for(@contrato_medicao, html: { class: 'form-horizontal' }) do |f| %>
    <div class="panel-body">

      <% if @contrato_medicao.errors.present? %>
        <div class="error_explanation">
          <h2> Foram encontrados <%= pluralize(@contrato_medicao.errors.count, "erro") %> ao tentar enviar o fomulário:</h2>
       
          <ul>
          <% @contrato_medicao.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <label for="contrato_numero" class="col-sm-2 control-label">Número: *</label>
        <div class="col-sm-2">
          <%= f.text_field :numero, class: "form-control", id: "contrato_numero" %>
        </div>
      </div>

      <div class="form-group">
        <label for="contrato_empresa" class="col-sm-2 control-label">Empresa:</label>
        <div class="col-sm-6">
          <%= collection_select(:contrato_medicao, :empresa_id, @empresas, :id, :nome, {}, { class: "form-control", id: "contrato_empresa" }) %>
        </div>
      </div>

      <div class="form-group">
        <label for="contrato_vigencia_inicial" class="col-sm-2 control-label">Vigência Inicial: *</label>
        <div class="col-sm-2">
          <%= f.text_field :vigencia_inicial, class: "form-control date-br datepicker", id: "contrato_vigencia_inicial" %>
        </div>
      </div>

      <div class="form-group">
        <label for="contrato_vigencia_final" class="col-sm-2 control-label">Vigência Final:</label>
        <div class="col-sm-2">
          <%= f.text_field :vigencia_final, class: "form-control date-br datepicker", id: "contrato_vigencia_final" %>
        </div>
      </div>

      <div class="form-group">
        <label for="contrato_data_assinatura" class="col-sm-2 control-label">Data da Assinatura:</label>
        <div class="col-sm-2">
          <%= f.text_field :data_assinatura, class: "form-control date-br datepicker", id: "contrato_data_assinatura" %>
        </div>
      </div>

    </div>

     <div class="panel-footer">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
