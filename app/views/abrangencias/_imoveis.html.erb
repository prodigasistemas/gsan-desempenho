<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Imóvel</th>
      <th>Localidade</th>
      <th>Setor Comercial</th>
      <th>Número do Lote</th>
    </tr>
  </thead>
  <tbody>
    <% @imoveis.each do |imovel| %>
      <tr>
        <td><%= imovel.id %></td>
        <td><%= imovel.localidade.nome %></td>
        <td><%= imovel.setor_comercial.nome %></td>
        <td><%= imovel.numero_lote %></td>
      </tr>
      <input type="hidden" name="abrangencia[imoveis][]" value="<%= imovel.id %>" />
    <% end %>
    <% if @imoveis.empty? %>
      <tr><th><center>Nenhum registro encontrado</center></th></tr>
    <% end %>
  </tbody>
</table>
